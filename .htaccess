RewriteEngine On

# Setup for removing .php extension (Optional usage)
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteCond %{REQUEST_FILENAME}\.php -f
# RewriteRule ^(.*)$ $1.php [NC,L]

# Prevent directory listing
Options -Indexes

# Protect includes directory
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Error Documents
ErrorDocument 404 /school%20antigravity/404.php
